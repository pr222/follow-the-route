<h1><span class="fa fa-cogs"></span>Products</h1>

<table class="table table-hover">
  <caption>List of products</caption>
  <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
    </tr>
  </thead>
  <tbody>
    {{#if viewData.products.length}}
      {{#each viewData.products}}
        <tr>
          <th scope="row">{{this.id}}</th>
          <td><a href="/products/{{this.id}}">{{this.name}}</a></td>
        </tr>
      {{/each}}
    {{else}}
      <tr colspan="2">
        <td class="text-center">>No products to display.</td>
      </tr>
    {{/if}}
  </tbody>
</table>